<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ========== CUSTOMER VIEWS ========== -->

    <!-- Search View -->
    <record id="view_rental_customer_search" model="ir.ui.view">
        <field name="name">rental.customer.search</field>
        <field name="model">rental.customer</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Customer" filter_domain="['|', ('name', 'ilike', self), ('customer_code', 'ilike', self)]"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="city"/>
                <field name="customer_code"/>

                <!-- Filters -->
                <filter name="active_customers" string="Active" domain="[('active', '=', True)]"/>
                <filter name="inactive_customers" string="Inactive" domain="[('active', '=', False)]"/>
                <filter name="individual" string="Individual" domain="[('customer_type', '=', 'individual')]"/>
                <filter name="company" string="Company" domain="[('customer_type', '=', 'company')]"/>
                <filter name="has_rentals" string="Has Rentals" domain="[('rental_count', '>', 0)]"/>

                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter name="group_type" string="Customer Type" context="{'group_by': 'customer_type'}"/>
                    <filter name="group_city" string="City" context="{'group_by': 'city'}"/>
                    <filter name="group_rating" string="Rating" context="{'group_by': 'rating'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- List View -->
    <record id="view_rental_customer_list" model="ir.ui.view">
        <field name="name">rental.customer.list</field>
        <field name="model">rental.customer</field>
        <field name="arch" type="xml">
            <list decoration-muted="active == False" decoration-success="rental_count > 5" decoration-info="rental_count > 0">
                <field name="customer_code"/>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="customer_type"/>
                <field name="city"/>
                <field name="rental_count"/>
                <field name="total_spent" widget="monetary"/>
                <field name="last_rental_date"/>
                <field name="rating" widget="priority"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_rental_customer_form" model="ir.ui.view">
        <field name="name">rental.customer.form</field>
        <field name="model">rental.customer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Action Buttons -->
                    <button name="action_view_rental_orders" type="object" string="View Rentals" class="btn-primary" invisible="rental_count == 0"/>
                </header>

                <sheet>
                    <!-- Status Bar -->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_rental_orders" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="rental_count" widget="statinfo" string="Rentals"/>
                        </button>
                    </div>

                    <!-- Main Info -->
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Customer Name"/>
                        </h1>
                        <h3>
                            <field name="customer_code" readonly="1" class="text-muted"/>
                        </h3>
                    </div>

                    <!-- Customer Type Switch -->
                    <group>
                        <group>
                            <field name="customer_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="company_name" invisible="customer_type != 'company'" required="customer_type == 'company'"/>
                            <field name="tax_id" invisible="customer_type != 'company'"/>
                        </group>
                        <group>
                            <field name="rating" widget="priority"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <!-- Contact Information -->
                    <notebook>
                        <page string="Contact Information">
                            <group>
                                <group string="Contact Details">
                                    <field name="email" widget="email"/>
                                    <field name="phone" widget="phone"/>
                                </group>
                                <group string="Address">
                                    <field name="address"/>
                                    <field name="city"/>
                                    <field name="state"/>
                                    <field name="zip_code"/>
                                    <field name="country"/>
                                </group>
                            </group>
                        </page>

                        <page string="Rental History" invisible="rental_count == 0">
                            <group>
                                <group string="Statistics">
                                    <field name="rental_count" readonly="1"/>
                                    <field name="total_spent" widget="monetary" readonly="1"/>
                                    <field name="last_rental_date" readonly="1"/>
                                </group>
                                <group string="Credit Information">
                                    <field name="credit_limit"/>
                                </group>
                            </group>

                            <field name="rental_order_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="state" decoration-success="state == 'done'" decoration-warning="state == 'ongoing'" decoration-info="state == 'confirmed'"/>
                                    <field name="total_price" widget="monetary"/>
                                </list>
                            </field>
                        </page>

                        <page string="Notes">
                            <field name="notes" placeholder="Internal notes about this customer..."/>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter (if using mail module) -->
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div> -->
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_rental_customer_kanban" model="ir.ui.view">
        <field name="name">rental.customer.kanban</field>
        <field name="model">rental.customer</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="customer_code"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="rental_count"/>
                <field name="total_spent"/>
                <field name="customer_type"/>
                <field name="rating"/>
                <field name="active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <i class="fa fa-user-circle fa-3x" t-att-style="'color: ' + (record.customer_type.raw_value == 'company' ? '#875A7B' : '#17a2b8')"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                    <span t-if="record.customer_code.value" class="text-muted">
                                        [                                        <t t-esc="record.customer_code.value"/>
]
                                    </span>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <i class="fa fa-envelope"/>
                                    <field name="email"/>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    <i class="fa fa-phone"/>
                                    <field name="phone"/>
                                </div>
                                <div class="oe_kanban_bottom_left">
                                    <span class="badge badge-pill badge-info" t-if="record.rental_count.value > 0">
                                        <t t-esc="record.rental_count.value"/>
 Rentals
                                    </span>
                                    <span class="badge badge-pill badge-success" t-if="record.total_spent.value > 0">
                                        $                                        <t t-esc="record.total_spent.value"/>
                                    </span>
                                </div>
                                <div class="oe_kanban_bottom_right">
                                    <field name="rating" widget="priority"/>
                                    <span t-if="!record.active.value" class="badge badge-pill badge-secondary">Inactive</span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>